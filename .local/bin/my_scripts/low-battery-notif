#!/bin/sh

CRITICAL_LEVEL=20
XDG_RUNTIME_DIR="/run/user/$(id -u)"
export XDG_RUNTIME_DIR
for BATTERY in /sys/class/power_supply/BAT? ; do
	[ "$(cat "$BATTERY/capacity")" -le "$CRITICAL_LEVEL" ] &&
	[ "$(cat "$BATTERY/status")" = "Discharging" ] &&
	notify-send "$BATTERY ðŸ”‹ is below critical level ðŸ˜° plug in your chargerðŸ”Œ!" -u critical
done
