#!/bin/sh

gethex(){
	LINE="$(xrdb -query | grep "^\*${1}:")"
	echo "${LINE##*:	}"
}

getdunstfont() {
	LINE="$(xrdb -query | grep "^\*font:")"
	LINE="${LINE##*:	}"
	echo "${LINE%%:*}"
}

killall dunst
dunst -font "$(getdunstfont)"\
	-lb "$(gethex '*.color4')" -nb "$(gethex '*.color2')" -cb "$(gethex '*.color1')"\
	-lf "#000000" -nf "#000000" -cf "#000000"\
	-lfr "#000000" -nfr "#000000" -cfr "#000000" &
