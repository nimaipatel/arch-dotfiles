" blank new tab page
set suggesttopsites=0

" default download directory
set downloadpath=~/downloads/

" always ask permission before using hardware and disable clipboard completely
set permissioncamera=ask
set permissionmicrophone=ask
set permissiondisplaycapture=ask
set permissionmidi=ask
set permissionfullscreen=ask
set permissiongeolocation=ask

" automatically redirect websites to less harmful alternatives
set redirects=
set redirects+=https?://(www\.)?google\.com(\.\w+)?/amp/s/amp\.(.*)~https://$3
set redirects+=^https?://(www\.)?(reddit\.com.*)~https://old.$2

" don't disable http only sites
set redirecttohttp

set searchwords=
set searchwords+=yt~youtube.com/results?search_query=%s
set searchwords+=g~www.google.com/search?q=%s
set searchwords+=aw~https://wiki.archlinux.org/index.php?title=Special:Search&search=%s
set searchwords+=aur~https://aur.archlinux.org/packages/?K=%s
set searchwords+=aor~https://www.archlinux.org/packages/?q=%s

" copy text like most browsers in normal mode
nnoremap <C-c> <p.copyText>

" auto-generated base16 colorscheme
colorscheme base16

" vim: ft=vim
